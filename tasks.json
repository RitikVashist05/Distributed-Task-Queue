// tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++11",                // Enable C++11 standard
                "-pthread",                  // Enable POSIX threading
                "main.cpp",                  // Main source file
                "Client.cpp",                // Client implementation
                "Server.cpp",                // Server implementation
                "Worker.cpp",                // Worker implementation
                "-o",
                "task_system.exe",           // Output executable name
                "-lws2_32"                   // Link against Winsock library
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build task for Distributed Task Queue System with Priority"
        }
    ]
}
